@page
@model HotelManagement.Pages.QueryInfo.IndexModel

@{
    ViewData["Title"] = "Ask Query";
}

<p>
    <a asp-page="Create" type="button" class="btn btn-secondary">Ask Query</a>
</p>
<table class="table table-dark table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Query[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Query[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Query[0].Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Query[0].Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Query) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id" type="button" class="btn btn-secondary">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.id" type="button" class="btn btn-secondary">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.id" type="button" class="btn btn-secondary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
