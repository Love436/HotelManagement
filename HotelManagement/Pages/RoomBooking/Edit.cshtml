@page
@model HotelManagement.Pages.RoomBooking.EditModel

@{
    ViewData["Title"] = "Edit";
}


<h4>Edit Book Room</h4>
<hr />
<div class="row">
    <div class="col-md-12 font-weight-bold">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookRoom.id" />
            <div class="form-group">
                <label asp-for="BookRoom.Name" class="control-label"></label>
                <input asp-for="BookRoom.Name" class="form-control" />
                <span asp-validation-for="BookRoom.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookRoom.Contact" class="control-label"></label>
                <input asp-for="BookRoom.Contact" class="form-control" />
                <span asp-validation-for="BookRoom.Contact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookRoom.RoomId" class="control-label"></label>
                <select asp-for="BookRoom.RoomId" class="form-control" asp-items="@(new SelectList(Model.rooms, "Id","RoomType"))">
                    <option value="" selected disabled>--Select Room--</option>
                </select>
                <span asp-validation-for="BookRoom.RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookRoom.NumberOfRooms" class="control-label"></label>
                <input asp-for="BookRoom.NumberOfRooms" class="form-control" />
                <span asp-validation-for="BookRoom.NumberOfRooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookRoom.RoomBookingDate" class="control-label"></label>
                <input asp-for="BookRoom.RoomBookingDate" class="form-control" />
                <span asp-validation-for="BookRoom.RoomBookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" type="button" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
