@page
@model HotelManagement.Pages.RoomInfo.IndexModel

@{
    ViewData["Title"] = "Add";
}

<p>
    <a asp-page="Create" type="button" class="btn btn-secondary">Add New Room</a>
</p>
<table class="table table-dark table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].RoomType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].RoomNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Room)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" type="button" class="btn btn-secondary">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" type="button" class="btn btn-secondary">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" type="button" class="btn btn-secondary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
